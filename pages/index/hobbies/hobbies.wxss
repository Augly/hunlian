  align-items: center;
}

.icon-xingqu, .icon-dianying {
  font-size: 32rpx;
}

.icon-lnicon29, .icon-yundong {
  font-size: 34rpx;
}

.label_title {
  margin-left: 13rpx;
}

.label_box {
  padding: 24rpx 32rpx 34rpx 24rpx;
  display: flex;
}

.label {
  font-size: 26rpx;
  color: #2846b3;
  border-radius: 10rpx;
  background-color: #bdcbff;
  padding: 18rpx 31rpx;
  margin-left: 16rpx;
