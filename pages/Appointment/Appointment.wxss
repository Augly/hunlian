/* pages/active_q/active_q.wxss */
.container{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.item_wrap{
    width: 100%;
  height: 480rpx;
  padding-top: 32rpx;
  border-bottom: 1px solid #EBEBEB;
  display: flex;
  justify-content: center;
}
.active_item{
  width: 686rpx;
  height: 360rpx;
  position: relative;
  margin-bottom: 16rpx;
}
.address{
  display: flex;
  justify-content: space-between;
    font-size: 26rpx;
  color: #1A1A1A;
  line-height: 26rpx;
  align-items: baseline;
}
.ditu{
  font-size: 30rpx;
  color: #1A1A1A;
  margin-right: 10rpx;
} 

.pic_item{
  width: 100%;
  height: 100%;
}
.active_mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  color: #ffffff;
}
.mask_text{
  font-size: 32rpx;
  display: block;
  text-align: center;
  margin-top: 140rpx;
  line-height: 32rpx;
}
.mask_subtext{
  display: block;
  text-align: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}