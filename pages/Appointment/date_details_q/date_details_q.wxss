page{
  background-color: #F5F6FA;
}
.banner{
  width: 100%;
  height: 360rpx;
  position: relative;
}
.banner_pic{
  width: 100%;
  height: 100%;
}
.active_mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  color: #ffffff;
}
.mask_text{
  font-size: 32rpx;
  display: block;
  text-align: center;
  margin-top: 140rpx;
  line-height: 32rpx;
}
.mask_subtext{
  display: block;
  text-align: center;
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}
.address{
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  box-sizing: border-box;
  padding: 0 33rpx;
  justify-content: space-between;
  font-size: 26rpx;
  color: #1A1A1A;
  line-height: 100rpx;
  align-items: baseline;
}

.ditu{
  font-size: 30rpx;
  color: #1A1A1A;
  margin-right: 10rpx;
} 

/*最近活动  */
.near_active{
  height: 100rpx;
  margin-top: 16rpx;
  background-color: #ffffff;
  position: relative;
  justify-content: space-between;
  display: flex;
  font-size: 26rpx;
  color: #1A1A1A;
  line-height: 100rpx;
  padding: 0 33rpx;
  align-items: baseline;
}
.near_active .jiantou{
  font-size: 32rpx;
  color: #CCCCCC;
}

.active_details{
  overflow: hidden;
  padding: 36rpx 33rpx;
  background-color: #ffffff;
  margin-top: 16rpx;
}
.active_text{
  font-size: 28rpx;
  color: #282828;
  margin-top: 25rpx;
  line-height: 50rpx;
}