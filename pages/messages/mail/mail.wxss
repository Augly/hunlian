.container{
  box-sizing: border-box;
  padding: 32rpx 32px 150rpx 32rpx;
}
.talk_item{
  display: flex;
  margin-bottom: 100rpx;
  overflow: hidden;
  /* width: 686rpx; */
}
.person_head{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.person_name{
  margin-left: 20rpx;
}
.name{
  font-size: 26rpx;
  line-height: 26rpx;
  margin-bottom: 16rpx;
}
.talk_details{
  padding: 35rpx 42rpx;
  background-color: #333333;
  border-radius: 0rpx 10rpx 50rpx 10rpx;
  max-width: 530rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 36rpx;
}
.flex_right{
  display: flex;
  justify-content: flex-end; 
}
.mytalk{
  padding: 35rpx 42rpx;
  background-color: #333333;
  max-width: 530rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 36rpx;
  border-radius: 10rpx 0 10rpx 50rpx;
  margin-right: 20rpx;
  white-space:normal;
  word-break:break-all;
}
.myname{
  display: block;
  text-align: right;
  padding-right: 20rpx;
}
.btn{
  width: 686rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  background: linear-gradient(to bottom, #E7A42A , #C98C1C);
  text-align: center;
  border-radius: 44rpx;
}
.btn_wrpa{
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  background-color: #F5F6FA;
  align-items: center;
}


/*回复弹层  */
.reply_mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.8);
  left: 0;
  top: 0;
  z-index: 10;
  display: none
}
.show{
  display: block;
}
.reply_popup{
  width: 686rpx;
  margin: 0 auto;
  position: relative;
  left: 0;
  right: 0;
  height: 678rpx;
  background-color: #fff;
  top: 50%;
  transform: translateY(-349rpx);
  border-radius: 10rpx;
  overflow: hidden;
}
.reply_popup .icon-quxiao1{
  position: absolute;
  right: 36rpx;
  top: 16rpx;
  color: #DBDBDB;
  font-size: 32rpx;
}
.reply_tit{
  font-size: 32rpx;
  font-weight: Bold;
  display: block;
  text-align: center;
  line-height: 32rpx;
  margin-top: 28rpx;
  margin-bottom: 33rpx;
}
.text_box{
  width: 616rpx;
  height: 445rpx;
  box-sizing: border-box;
  padding: 32rpx 29rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  background-color: #EBEBEB;
  margin: 0 auto;
  border-radius: 10rpx;
}

.reply_btn{
  width: 616rpx;
  height: 88rpx;
  margin-top: 26rpx;
  background-color: #E9AD40;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  border-radius: 5rpx;
  margin: 16rpx auto 0;
}


/*发送成功  */
.success_popup{
  width: 520rpx;
  height: 120rpx;
  background:rgba(0,0,0,0.8);
  position: fixed;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 10rpx;
  top: 50%;
  transform: translateY(-60rpx);
  font-size: 28rpx;
  text-align: center;
  line-height: 120rpx;
  color: #ffffff;
}


.listgo{
  width: 100% !important;
}