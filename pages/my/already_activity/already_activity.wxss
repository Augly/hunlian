/* pages/already_activity/already_activity.wxss */
.item{
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  margin: 0 32rpx;
  padding:32rpx 0;
  border-bottom:1px solid #EBEBEB;
}
.item_img{
  display: inline-block;
  width:230rpx;
  height:120rpx;
  border-radius:10rpx;
  overflow: hidden;
}
.item_img image{
  width:100%;
  height:100%;
}
.item_content{
  display: inline-block;
  margin:0 0 0 22rpx;
  color:#000;
  font-size:24rpx;
}
.item_title{
  font-size:30rpx;
  font-weight: bold;
}
.item_time{
  margin:15rpx 0;
}
.item_price{
  position: absolute;
  top:32rpx;
  right: 32rpx;
  font-size:30rpx;
  color:#000;
  font-weight: bold;
}
